<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.fc.member.memberDao.MemberJobHuntingDao">

    <insert id="insertJobHunting" parameterType="com.example.fc.member.memberVo.MemberJobHuntingVo">
        insert into job_hunting (title, stack, period, payment, detail, member_id) values (#{title}, #{stack}, #{period}, #{payment}, #{detail}, '1');
    </insert>

    <select id="findJobHuntingMemberBoard" resultType="java.lang.Integer">
        select member_board from job_hunting where title = #{title} and detail = #{detail};
    </select>

    <insert id="insertMemberStack" parameterType="java.util.HashMap">
        insert into member_stack (member_board, stack) values (#{stringMemberBoard}, #{stack});
    </insert>

<!--    <select id="findAllJobHunting" parameterType="java.lang.Integer" resultType="com.example.fc.member.memberVo.MemberJobHuntingVo">
        select * from job_hunting
            order by create_date limit 6 offset 0;
    </select>-->

    <select id="findAllJobHunting" resultType="com.example.fc.member.memberVo.MemberJobHuntingVo">
        select * from job_hunting order by create_date desc
    </select>

</mapper>