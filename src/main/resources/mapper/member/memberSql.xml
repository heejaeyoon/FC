<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.fc.member.memberDao.MemberDao">

    <!--
    <resultMap id="map_vo_member" type="com.example.fc.vo.MemberVo">
        <result column="member_id" property="member_id" jdbcType="NVARCHAR" javaType="String" />
        <result column="name" property="name" jdbcType="NVARCHAR" javaType="String" />
        <result column="password" property="password" jdbcType="NVARCHAR" javaType="String" />
        <result column="email" property="email" jdbcType="NVARCHAR" javaType="String" />
    </resultMap>
    -->

    <select id="doMemberList" resultType="com.example.fc.member.memberVo.MemberVo">
        select * from member;
    </select>
    
    <!-- 유저 회원가입 Insert -->
    <insert id="memberJoin" parameterType="com.example.fc.member.memberVo.MemberVo">
        INSERT INTO member(name,email,member_id,password,addr,phone,gender,birth,role)
        values (#{name}, #{email}, #{member_id}, #{password},#{addr},#{phone},#{gender},#{birth},#{role});
    </insert>

    <!-- 로그인 -->
    <select id="memberLogin" resultType="com.example.fc.member.memberVo.MemberVo">
        select name,addr,phone,gender,birth,role,email from member where email = #{email} and password = #{password};
    </select>



</mapper>