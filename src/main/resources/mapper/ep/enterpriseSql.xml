<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.fc.ep.epDao.EPDao">

    <!--
    <resultMap id="map_vo_member" type="com.example.fc.vo.MemberVo">
        <result column="member_id" property="member_id" jdbcType="NVARCHAR" javaType="String" />
        <result column="name" property="name" jdbcType="NVARCHAR" javaType="String" />
        <result column="password" property="password" jdbcType="NVARCHAR" javaType="String" />
        <result column="email" property="email" jdbcType="NVARCHAR" javaType="String" />
    </resultMap>
    -->

    <select id="doEPList" resultType="com.example.fc.ep.epVo.EpVo">
        select * from ep;
    </select>
    
    <!-- 유저 회원가입 Insert -->
    <insert id="epJoin" parameterType="com.example.fc.ep.epVo.EpVo">
        INSERT INTO ep(email,name,content, password,addr,phone,bn_number)
        values (#{email}, #{name}, #{content},#{password},#{addr},#{phone},#{bn_number});
    </insert>

    <!-- 로그인 -->
    <select id="epLogin" resultType="com.example.fc.ep.epVo.EpVo">
        select ep_id,email,name,content, password,addr,phone,bn_number from ep where email = #{email} and password = #{password};
    </select>



</mapper>